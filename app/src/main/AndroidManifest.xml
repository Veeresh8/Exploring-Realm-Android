<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="veeresh.a3c.realm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="veeresh.a3c.realm.application.RealmApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="veeresh.a3c.realm.ui.MainActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="veeresh.a3c.realm.ui.FavouritesActivity"
            android:parentActivityName="veeresh.a3c.realm.ui.MainActivity" />
        <activity
            android:name="veeresh.a3c.realm.ui.DetailsActivity"
            android:parentActivityName="veeresh.a3c.realm.ui.MainActivity" />
    </application>

</manifest>